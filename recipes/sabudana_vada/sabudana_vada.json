        },
        {
          "ingredientName": "Salt",
          "measurementQuantity": "As per taste"
        },
        {
          "ingredientName": "Coriander Leaves",
          "measurementQuantity": "1/2 cup finely chopped"
        },
        {
          "ingredientName": "Peanuts",
          "measurementQuantity": "Roasted, husk removed and powdered"
        },
        {
          "ingredientName": "Oil",
