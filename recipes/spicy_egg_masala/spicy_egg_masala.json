    "recipeDescriptionLines": [
        {
            "recipeDescriptionLine": "Spicy Egg Masala as the name says is a spicy egg recipe which is made with simple ingredients and other spices. The recipe can be made in semi-gravy or dry form as per your choice."
        },
        {
            "recipeDescriptionLine": "Eggs are boiled first and added to the gravy mix. Ginger and garlic enhances the flavor."
        }
    ],
    "preface":  "",
    "servings": "2",
    "prepTime": "5 mins",
    "cookTime": "25-30 mins",
    "ingredients":  [
        {
            "ingredientTitle": "",
            "ingredientList": [
                {
                    "ingredientName":  "Eggs",
