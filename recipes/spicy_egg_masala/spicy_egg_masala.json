    "cookingProcedures": [
        {
            "procedureName": "",
            "procedureSteps": [
                {
                    "stepNo":  "1",
                    "stepDescription": "Boil eggs for 12-15 mins. Peel off the shell once cooled.",
                    "stepImages": []
                },
                {
                    "stepNo":  "2",
                    "stepDescription": "In the meanwhile, heat oil in a wok, add onions and fry until it changes color. Crush ginger and garlic together and add to onions along with curry leaves. Fry for 1 min.",
