                {
                    "ingredientName":  "Mustard seeds",
                    "measurementQuantity": "1 tsp"
                },
                {
                    "ingredientName":  "Red chilly",
                    "measurementQuantity": "2, split into halves"
                },
                {
                    "ingredientName":  "Curry leaves",
