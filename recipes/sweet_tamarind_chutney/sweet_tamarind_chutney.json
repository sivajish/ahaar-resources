{
    "recipeId":  "sweet_tamarind_chutney",
    "recipeName": "Sweet Tamarind Chutney",
    "recipeSmallImageUrl": "recipe_small_image.jpg",
    "recipeLargeImageUrl": "recipe_big_image.jpg",
    "recipeDescriptionLines": [
        {
            "recipeDescriptionLine": "Sweet Tamarind Chutney is a side dip that is widely consumed with Indian appetizers like samosas, vada and chaat like bhel puri, ragda pattice and other chaats. It is sweet and tangy in taste."
        },
        {
            "recipeDescriptionLine": "The best thing about this chutney is that you can make it in larger quantity and store in the refrigerator for a very long time."
        },
        {
            "recipeDescriptionLine": "It has a tangy, sweet flavor."
        }
    ],
    "preface":  "",
    "servings": "2 cups",
    "prepTime": "10 mins",
    "cookTime": "1 hour",
    "ingredients":  [
        {
            "ingredientTitle": "",
            "ingredientList": [
                {
                    "ingredientName":  "Tamarind",
                    "measurementQuantity": "1/2 cup"
                },
                {
                    "ingredientName":  "Jaggery",
                    "measurementQuantity": "1 cup powdered"
                },
                {
                    "ingredientName":  "Water",
                    "measurementQuantity": "2 cups"
                },
                {
                    "ingredientName":  "Salt",
                    "measurementQuantity": "1 tsp"
                },
                {
                    "ingredientName":  "Red Chilly powder",
                    "measurementQuantity": "1 tbsp"
                },
                {
                    "ingredientName":  "Cumin (Jeera) powder",
                    "measurementQuantity": "1 tsp, roasted"
                },
                {
                    "ingredientName":  "Coriander (Dhaniya) powder",
                    "measurementQuantity": "1 tsp, roasted"
                },
                {
                    "ingredientName":  "Garam Masala",
                    "measurementQuantity": "1 pinch"
                },
                {
                    "ingredientName":  "Fennel powder",
                    "measurementQuantity": "1 tsp, roasted"
                }
            ]
        }        
    ],
    "cookingProcedures": [
        {
            "procedureName": "",
            "procedureSteps": [
                {
                    "stepNo":  "1",
                    "stepDescription": "Soak tamarind in warm water for 1 hour . On a medium flame, bring it to boil. Stir well. Then add powdered jaggery. Once the jaggery is melted completely (10-15 mins) , filter the content. This will remove impurities from jaggery if any.",
                    "stepImages": [
                        {                    
                            "ImageUrl": "step_1_1.jpg",
                            "ImageAltText": ""
                        },
                        {                    
                            "ImageUrl": "step_1_2.jpg",
                            "ImageAltText": ""
                        }
                    ]
                },
                {
                    "stepNo":  "2",
                    "stepDescription": "Add all dry ingredients to the tamarind jaggery mixture and heat again. Once it comes to boil, reduce the flame, allow it to cook, till the quantity is reduce by 30% (30-40 mins). Keep stirring in between. Once done, allow it to cool. Chutney will thicken. Serve as a dip for snacks and chaats.",
                    "stepImages": [
                        {                    
                            "ImageUrl": "step_2_1.jpg",
                            "ImageAltText": ""
                        },
                        {                    
                            "ImageUrl": "step_2_1.jpg",
