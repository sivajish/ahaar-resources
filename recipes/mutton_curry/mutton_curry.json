    "recipeDescriptionLines": [
        {
            "recipeDescriptionLine": "Goat Curry,  widely known as Mutton curry in most part of India is a famous red meat cooked in authentic blend of spices. It may vary from mild spicy to very spicy."
        },
        {
            "recipeDescriptionLine": "The flavor and aroma is a result of blend and combination of roasted onions, ginger, garlic, tomatoes and spices like coriander, turmeric, chili and cumin powder."
        }
    ],
    "preface": "",
    "servings": "8",
    "prepTime": "30 mins",
    "cookTime": "1 hour",
    "ingredients":  [
