    "cookingProcedures": [
        {
            "procedureName": "Marination",
            "procedureSteps": [
                {
                    "stepNo":  "1",
                    "stepDescription": "Marinate mutton with the spices and keep it overnight in the refrigerator.",
                    "stepImages": [
                        {                    
                            "ImageUrl": "step_1_1.jpg",
                            "ImageAltText": ""
                        }
                    ]
                }
            ]
        },
        {
            "procedureName": "Ground Paste",
            "procedureSteps": [
                {
                    "stepNo":  "2",
                    "stepDescription": "Heat oil in wok or pan. Add all spices except coconut. Let it fry for 1 min or until color changes to light brown whichever is less.",
                    "stepImages": [
                        {                    
                            "ImageUrl": "step_2_1.jpg",
                            "ImageAltText": ""
                        }
                    ]
                },
                {
                    "stepNo":  "3",
                    "stepDescription": "Switch off the stove. Add coconut and saute till color changes to light brown. Let it cool down. Make a fine paste with water in grinder and keep it aside.",
                    "stepImages": [
                        {                    
                            "ImageUrl": "step_3_1.jpg",
                            "ImageAltText": ""
                        },
                        {                    
                            "ImageUrl": "step_3_2.jpg",
                            "ImageAltText": ""
                        }
                    ]
                }
            ]
        },
        {
            "procedureName": " For Gravy",
            "procedureSteps": [
                {
                    "stepNo":  "4",
                    "stepDescription": "Heat oil in a pan or wok. Add all spices and sauté for 1 min.",
                    "stepImages": [
                        {                    
                            "ImageUrl": "step_4_1.jpg",
                            "ImageAltText": ""
                        }
                    ]
                },
                {
                    "stepNo":  "5",
                    "stepDescription": "Add onions, fry till light brown. Then add ginger garlic paste. Fry till raw smell goes away (~2 mins). Add finely chopped tomatoes. Fry till tomatoes becomes a paste.",
                    "stepImages": [
                        {                    
                            "ImageUrl": "step_5_1.jpg",
                            "ImageAltText": ""
                        },
                        {                    
                            "ImageUrl": "step_5_2.jpg",
                            "ImageAltText": ""
                        },
                        {                    
                            "ImageUrl": "step_5_3.jpg",
                            "ImageAltText": ""
                        }
                    ]
                },
                {
                    "stepNo":  "6",
                    "stepDescription": "Add turmeric and red chilly powder. Sauté for 1 minute. Add ground paste. Mix it well. Transfer the contents to pressure cooker.",
                    "stepImages": [
                        {                    
                            "ImageUrl": "step_6_1.jpg",
                            "ImageAltText": ""
                        },
                        {                    
                            "ImageUrl": "step_6_2.jpg",
                            "ImageAltText": ""
                        }
                    ]
                },
                {
                    "stepNo":  "7",
                    "stepDescription": "Add marinated mutton, water and salt. Pressure cook for 5 whistles. Carefully open the lid ad finely chopped coriander leaves.",
                    "stepImages": [
                        {                    
                            "ImageUrl": "step_7_1.jpg",
                            "ImageAltText": ""
                        },
                        {                    
                            "ImageUrl": "step_7_2.jpg",
                            "ImageAltText": ""
                        }
                    ]
                },
                {
                    "stepNo":  "8",
                    "stepDescription": "Enjoy hot with rotis and rice.",
                    "stepImages": []
                }
            ]
        }
    ],
