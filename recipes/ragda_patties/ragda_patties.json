              "ImageAltText": ""
            },
            {
              "ImageUrl": "step_3_1_2.JPG",
              "ImageAltText": ""
            },
            {
              "ImageUrl": "step_3_1_3.JPG",
              "ImageAltText": ""
            }
          ]
        }
      ]
    }
