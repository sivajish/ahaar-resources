      "ingredientList": [
        {
          "ingredientName": "Gajar (Carrot)",
          "measurementQuantity": "1/2 kg"
        },
        {
          "ingredientName": "Milk",
          "measurementQuantity": "2 cups"
        },
        {
          "ingredientName": "Sugar",
          "measurementQuantity": "1/2 cup"
